<Window x:Class="SpinningDonut.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Spinning Donut" Height="800" Width="1200"
        Background="Black">
    <Grid>

        <Viewbox x:Name="TopViewbox"
         Grid.Row="0"
         Stretch="Uniform"
         HorizontalAlignment="Center"
         VerticalAlignment="Top"
         Margin="0,10,0,20">

            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top" Height="84" Width="356">
                <TextBlock x:Name="TimerDisplay"
                           FontFamily="Consolas"
                           FontSize="32"
                           Foreground="White"
                           Background="Black"
                           Text="25:00"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                    <Button x:Name="StartButton" Content="Start" Width="80" Margin="5"/>
                    <Button x:Name="PauseButton" Content="Pause" Width="80" Margin="5"/>
                    <Button x:Name="ClearButton" Content="Clear" Width="80" Margin="5"/>
                </StackPanel>
            </StackPanel>
        </Viewbox>

        <Viewbox Grid.Row="1"
             Stretch="Uniform"
             HorizontalAlignment="Center"
             VerticalAlignment="Center"
             Margin="100">
            <TextBlock x:Name="DonutTextBlock"
                   FontFamily="Consolas"
                   FontSize="12"
                   Foreground="White"
                   Background="Black"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   TextAlignment="Left"
                   />
        </Viewbox>
    </Grid>
</Window>
