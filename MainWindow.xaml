<Window x:Class="SpinningDonut.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Spinning Donut"
        Height="600"
        Width="450"
        Background="Black">

    <Grid Background="Black">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Viewbox x:Name="TopViewbox"
             Grid.Row="0"
             Stretch="Uniform"
             HorizontalAlignment="Center"
             VerticalAlignment="Top"
             Margin="0,10,0,10">

            <Grid Width="400">

                <Grid.LayoutTransform>
                    <ScaleTransform ScaleX="0.55" ScaleY="0.55"/>
                </Grid.LayoutTransform>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock x:Name="TimerDisplay"
                       Grid.Row="0"
                       FontFamily="Consolas"
                       FontSize="48"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"
                       Text="25:00"/>

                <StackPanel Grid.Row="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                    <Button x:Name="StartButton"
                        Content="Start"
                        Width="120"
                        Height="40"
                        Margin="5"/>

                    <Button x:Name="PauseButton"
                        Content="Pause"
                        Width="120"
                        Height="40"
                        Margin="5"/>

                    <Button x:Name="ClearButton"
                        Content="Clear"
                        Width="120"
                        Height="40"
                        Margin="5"/>
                </StackPanel>

            </Grid>

        </Viewbox>

        <Viewbox Grid.Row="1"
             Stretch="Uniform"
             HorizontalAlignment="Center"
             VerticalAlignment="Center"
             Margin="10">

            <TextBlock x:Name="DonutTextBlock"
                   FontFamily="Consolas"
                   FontSize="12"
                   Foreground="White"
                   Background="Black"
                   TextAlignment="Left"/>
        </Viewbox>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Margin="0,10,0,15">
            <ComboBox x:Name="AlarmSelector"
                      Width="200"
                      Height="32"
                      Margin="5"
                      HorizontalAlignment="Center" />

            <Button x:Name="TestButton"
                    Content="Test (10s)"
                    Width="140"
                    Height="32"
                    Margin="5" />
        </StackPanel>

    </Grid>



</Window>
